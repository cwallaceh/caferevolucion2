<div class="inner-940">

  <h3>Escritos</h3>

      <% @posts.each do |post| %>
          <!-- <td><%= post.user_id %></td> -->
          <h2><%= post.title %></h2>
          <hr>
          <%= post.category %><br>
          <p><%= post.body %></p>
          <hr>
          <td><%= link_to 'Leer', post %></td>
          <% if can? :update, post %>
          |<td><%= link_to 'Editar', edit_post_path(post) %></td>
          <% end %>
          <% if can? :destroy, post %>
          |<td><%= link_to 'Borrar', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>

  <%= will_paginate @posts %>

</div>
