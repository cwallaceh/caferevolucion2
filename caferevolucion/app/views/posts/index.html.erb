<div class="inner-940">
  <h1>Escritos</h1>

  <table>
<!--     Puedo quitar todas las tablas, Carlangas? <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Category</th>
        <th>Body</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead> -->

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <!-- <td><%= post.user_id %></td> -->
          <td><h1><%= post.title %><h1></td>
          <td><%= post.category %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'Leer', post %></td>
          <% if can? :update, post %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <% end %>
          <% if can? :destroy, post %>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path %>
</div>
