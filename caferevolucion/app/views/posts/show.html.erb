<div class="inner-940">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>User:</strong>
	  <%= @post.user_id %>
	</p>

	<p>
	  <strong>Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong>Category:</strong>
	  <%= @post.category %>
	</p>

	<p>
	  <strong>Body:</strong>
	  <%= @post.body %>
	</p>

	<% if can? :update, @post %>
	<%= link_to 'Editar', edit_post_path(@post) %> |
	<% end %>
	<%= link_to 'Regresar', posts_path %>
</div>
